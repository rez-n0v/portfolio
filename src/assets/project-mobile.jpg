  <rect x="330" y="315" width="140" height="8" fill="#e2e8f0" rx="4"/>
  <rect x="330" y="315" width="84" height="8" fill="#8b5cf6" rx="4"/>
  
  <text x="330" y="335" fill="#64748b" font-family="Arial, sans-serif" font-size="10">60% Complete</text>
  
  <!-- Add Task Button -->
  <circle cx="400" cy="370" r="20" fill="#8b5cf6"/>
  <text x="395" y="375" fill="white" font-family="Arial, sans-serif" font-size="16" font-weight="bold">+</text>
  
