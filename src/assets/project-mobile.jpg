  <text x="640" y="220" fill="#374151" font-family="Arial, sans-serif" font-size="12" font-weight="bold">Quick Actions</text>
  <rect x="640" y="230" width="100" height="15" fill="#8b5cf6" rx="2"/>
  <rect x="640" y="250" width="100" height="15" fill="#10b981" rx="2"/>
  <rect x="640" y="270" width="100" height="15" fill="#f59e0b" rx="2"/>
