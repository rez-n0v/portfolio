  <rect x="320" y="255" width="160" height="25" fill="white" stroke="#e2e8f0" stroke-width="1" rx="4"/>
  <circle cx="330" cy="267" r="6" fill="none" stroke="#8b5cf6" stroke-width="2"/>
  <text x="345" y="270" fill="#1e293b" font-family="Arial, sans-serif" font-size="12">Schedule team meeting</text>
  
