  <circle cx="700" cy="150" r="40" fill="#10b981" opacity="0.1"/>
  <circle cx="150" cy="300" r="25" fill="#f59e0b" opacity="0.1"/>
  <circle cx="650" cy="350" r="35" fill="#ef4444" opacity="0.1"/>
  
