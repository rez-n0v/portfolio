  <rect x="320" y="290" width="160" height="60" fill="#f8fafc" stroke="#e2e8f0" stroke-width="1" rx="4"/>
  <text x="330" y="305" fill="#374151" font-family="Arial, sans-serif" font-size="10" font-weight="bold">Today's Progress</text>
  
